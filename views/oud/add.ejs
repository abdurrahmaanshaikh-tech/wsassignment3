<%- include('../partials/header') %>

<div class="card shadow p-4 mx-auto" style="max-width: 650px; border-radius: 18px;">
    
    <h2 class="fw-bold mb-4 text-center" style="letter-spacing: -0.5px;">
        <i class="fa-solid fa-plus text-success"></i> Add New Oud
    </h2>

    <form action="/oud/add" method="POST">

        <!--the name-->
        <div class="mb-3">
            <label class="form-label fw-semibold">Oud Name</label>
            <input 
                type="text" 
                name="name" 
                class="form-control form-control-lg" 
                placeholder="Enter oud name" 
                required>
        </div>

        <!--the origin-->
        <div class="mb-3">
            <label class="form-label fw-semibold">Origin</label>
            <input 
                type="text" 
                name="origin" 
                class="form-control form-control-lg" 
                placeholder="Cambodia, India, etc." 
                required>
        </div>

        <!--the stock-->
        <div class="mb-3">
            <label class="form-label fw-semibold">Stock Quantity</label>
            <input 
                type="number" 
                name="stock" 
                class="form-control form-control-lg" 
                placeholder="Enter quantity in stock" 
                required>
        </div>

        <!--the price-->
        <div class="mb-3">
            <label class="form-label fw-semibold">Price (CAD)</label>
            <input 
                type="number" 
                step="0.01" 
                name="price" 
                class="form-control form-control-lg" 
                placeholder="Enter price" 
                required>
        </div>

        <!--submit and save-->
        <button class="btn btn-success btn-lg w-100 mt-3">
            <i class="fa-solid fa-check"></i> Save Oud
        </button>

        <!--go back-->
        <a href="/oud" class="btn btn-secondary btn-lg w-100 mt-3">
            <i class="fa-solid fa-arrow-left"></i> Back to Inventory
        </a>

    </form>
</div>

<%- include('../partials/footer') %>
