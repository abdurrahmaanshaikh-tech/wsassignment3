<%- include('../partials/header') %>

<h2 class="fw-bold mb-4">Oud Inventory Directory</h2> <!--the main header-->

<a href="/oud/add" class="btn btn-success mb-3"> <!-- the add new oud button-->
  <i class="fa-solid fa-plus"></i> Add New Oud
</a>

<div class="card shadow"> <!--the table container-->
  <div class="card-body">
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Name</th> <!--the table headers-->
          <th>Origin</th>
          <th>Stock</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
      <% items.forEach(item => { %> <!--looping through each oud item-->
        <tr>
          <td><%= item.name %></td>
          <td><%= item.origin %></td>
          <td><%= item.stock %></td>
          <td>$<%= item.price %></td>

          <td>
            <!-- Edit Button -->
            <a class="btn btn-warning btn-sm text-white"  
               href="/oud/edit/<%= item._id %>"> <!--the edit oud link-->
              <i class="fa-solid fa-pen-to-square"></i>
            </a>

            <!-- Delete Button -->
            <a class="btn btn-danger btn-sm" 
               href="/oud/delete/<%= item._id %>"
               onclick="return confirm('Are you sure you want to delete this item?')"> <!--the delete oud link-->
              <i class="fa-solid fa-trash"></i>
            </a>
          </td>
        </tr>
      <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>